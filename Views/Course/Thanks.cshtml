@model StudentResponse

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanks</title>
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <div class="container m-4">
        <div class="card mx auto" style="width:500px;">
            <div class="card-header">
            Merhaba @Model.Name
            </div>
            <div class="card-body">
                @{
                    if(Model.Confirm == true)
                    {
                    <span>Kursa katılmış olduğunuzdan dolayı mutlu olduk.</span>
                    <div>
                    Diğer katılımcıları <a asp-action="List">görüntüle.</a>
            </div>
                    }
                    else
                    {
                    <text>Üzüldük. </text>            
                    }
                }
            </div>
        </div>
    </div>

    <h2></h2>
    <hr>
    

</body>
</html>